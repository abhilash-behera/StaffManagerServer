extends layout
block content
	div(class="well well-sm")
		strong Photos
	div(id="products" class="row list-group")
		-var i;
		-for(i=0;i<data.length;i++){
		-var url=data[i].url;
		-var type=data[i].type;
		-var description=data[i].description;
		-var color=data[i].color;
		-var hex=data[i].hex;
		-var email=data[i].email;
		-var time=data[i].time;
		-var name=data[i].name;
		div(class="item col-xs-4 col-lg-4")
			div(class="thumbnail")
				img(class="group list-group-image" src="#{url}" alt="" style="min-height:200px;max-height:200px;min-width:200px;max-width:200px")
				div(class="caption")
					h4(class="group inner list-group-item-heading") #{name}
					p(class="group inner list-group-item-text" style="white-space:pre").
						Email: #{email}
						Time: #{time}
						URL: #{url}
						Type: #{type}
						Color: #{color} Hex: #{hex}
						Description: #{description}
					div(class="row")
						div(class="col-xs-12 col-md-6")
							p(class="lead") $21.000
						div(class="col-xs-12 col-md-6")
							-var link='\\deletePhoto?url='+url;
							a(class="btn btn-success" href="#{link}") Delete
		-}	
		